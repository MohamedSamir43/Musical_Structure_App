<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_margin="@dimen/little_margin"
    android:layout_weight="1"
    android:background="@color/accent_color"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coverOfAlbum"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/little_margin"
        android:layout_marginLeft="@dimen/little_margin"
        android:layout_marginTop="@dimen/little_margin"
        android:src="@drawable/amr_diab_album" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/little_margin"
        android:layout_marginRight="@dimen/little_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameOfBand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amr_diab_artist"
            android:textSize="@dimen/size_title_of_album"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameOfAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amr_diab_album"
            android:textSize="@dimen/size_title_of_song"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/addToPlayList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_color"
                android:src="@drawable/ic_playlist_add_white_18dp" />

            <ImageButton
                android:id="@+id/playAlbum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_color"
                android:src="@drawable/ic_play_arrow_white_18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
